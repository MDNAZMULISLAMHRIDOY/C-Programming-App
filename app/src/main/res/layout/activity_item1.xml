<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2A3B45"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".item1">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appLayout"
        android:layout_width="match_parent"
        android:background="#385567"
        android:layout_height="55dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tabMode"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="125dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A3B45"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="A.Legs"
                    android:editable="true"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:editable="true"
                    android:text="time limit per test: 2 seconds"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="memory limit per test: 256 megabytes"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:editable="true"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:text="It's another beautiful day on Farmer John's farm.\n\nAfter Farmer John arrived at his farm, he counted n
 legs. It is known only chickens and cows live on the farm, and a chicken has 2
 legs while a cow has 4.\n\nWhat is the minimum number of animals Farmer John can have on his farm assuming he counted the legs of all animals?"
            android:textColor="@color/white"
            android:editable="true"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Input"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:editable="true"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:editable="true"
            android:text="The first line contains single integer t(1≤t≤103) — the number of test cases.\n\n
Each test case contains an integer n(2≤n≤2⋅103, n is even)."
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Output"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:editable="true"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:editable="true"
            android:text="For each test case, output an integer, the minimum number of animals Farmer John can have on his farm."
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Example"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:editable="true"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="165dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A3B45"
                android:orientation="vertical">

                <TextView
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Input\n3\n2\n6\n8"
                    android:layout_marginTop="5dp"
                    android:editable="true"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Output"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:editable="true"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="329dp"
            android:layout_height="101dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2A3B45"
                android:orientation="vertical">

                <TextView
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="1\n2\n2"
                    android:editable="true"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="188dp"
            android:tooltipText="Exit"
            android:layout_height="52dp"
            android:id="@+id/solve_qus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Solve Problem"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>