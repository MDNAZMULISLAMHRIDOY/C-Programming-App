        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Introduction to C Programming Language"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="171dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="C is a general-purpose, procedural programming language developed by Dennis Ritchie at Bell Labs in the early 1970s. It has since become one of the most widely used programming languages due to its efficiency, portability, and flexibility."
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/img_12" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="The main features of the C language include:"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="1.General Purpose and Portable\n2.Low-level Memory Access\n3.Fast Speed\n4.Clean Syntax"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Characteristics of C:"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/img_13" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Simple and Efficient:"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="C provides a minimalistic syntax that is easy to learn and use, which allows for writing efficient and fast programs."
            android:textColor="@color/white"
            android:textSize="20dp"
/>
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Low-Level Capabilities:"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="C is often referred to as a middle-level language because it combines features of both high-level and low-level languages. It provides access to low-level memory manipulation, which is particularly useful in system programming, such as developing operating systems, drivers, and embedded systems."
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
